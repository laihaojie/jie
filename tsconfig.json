{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@djie/utils": [
        "./packages/utils/src/index.ts"
      ],
      "@djie/ws": [
        "./packages/ws/src/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "packages/.test",
    "packages/_docs"
  ]
}
